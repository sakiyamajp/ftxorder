doctype html
html
	head
		title price
		link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1' crossorigin='anonymous')
		link(href='https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.0.0/mdb.min.css' rel='stylesheet')
		link(rel='stylesheet', href='/style.css')
	body
		script.
			const CONFIG = JSON.parse('!{JSON.stringify(config)}');
		.container-fluid
			.row
				.col-xl-6
					.fixedwidth
						.input-group.input-group-sm.mb-3.form-white
							select.form-select#symbol
								each m in config.ms
									option(value=m.id)
										= m.id
					.fixedwidth
						.input-group.input-group-sm
							.form-outline.form-white
								input.form-control#size(type='number' placeholder="size")
								label.form-label.base_currency(for="size") ETH
					.fixedwidth
						.range
							p.sizesliderlabel
							input#sizeslider.form-range(type='range' min="0" step="0.02")

				.col-12
					button#cancel.order.btn.btn-sm.btn-warning(type='button' style="margin-right:20px")
						| cancel all
						br
						| order [esc]

					button#omb.order.btn.btn-sm.btn-success(type='button' data-type="market" data-buy="true")
						| market
						br
						| long [f]
					button#omc.order.btn.btn-sm.btn-warning(type='button' data-type="market")
						| market
						br
						| close [-]
					button#oms.order.btn.btn-sm.btn-danger(type='button' data-type="market" data-buy="false" style="margin-right:20px")
						| market
						br
						| short [j]

					button#olb.order.btn.btn-sm.btn-success(type='button' data-type="limit" data-buy="true")
						| limit
						br
						| best bid [q]
					button#olc.order.btn.btn-sm.btn-warning(type='button' data-type="limit")
						| limit
						br
						| close [w]
					button#ols.order.btn.btn-sm.btn-danger(type='button' data-type="limit" data-buy="false")
						| limit
						br
						| best ask [e]
			.row
				.col-xxl-6
					.chart
						.zoom
							| zoom +[v] -[b]
						p.position
							| position&nbsp;
							span.lot
							br
							| pnl&nbsp;
							span.pnl
						p.accountinfo
							| free collateral&nbsp;
							span.freeCollateral
							br
							| leverage&nbsp;
							span.leverage
						.log
						svg
					.controls
						.form-check.form-check-inline
							input#reduce.form-check-input(type='checkbox' value='reduce')
							label.form-check-label(for='reduce') reduce only[z]
						.form-check.form-check-inline
							input#post.form-check-input(type='checkbox' value='post')
							label.form-check-label(for='post') post only[x]
						.form-check.form-check-inline
							input#ioc.form-check-input(type='checkbox' value='ioc')
							label.form-check-label(for='ioc') ioc[c]
						.buysell(data-buy="true")
							span.buy.badge.bg-success.rounded-pill BUY[tab]
							span.sell.badge.bg-danger.rounded-pill.disabled SELL[tab]
				.col-xxl-6
					.tradingview-widget-container
						#tradingview

		script(src='https://code.jquery.com/jquery-3.5.1.min.js' integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=' crossorigin='anonymous')
		script(type="text/javascript",src="//cdnjs.cloudflare.com/ajax/libs/d3/6.3.1/d3.min.js")
		script(type="text/javascript",src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.25.3/moment-with-locales.min.js")
		script(type="text/javascript",src="//cdnjs.cloudflare.com/ajax/libs/keymage/1.1.3/keymage.min.js")
		script(type="text/javascript",src="/socket.io/socket.io.js")
		script(type='text/javascript' src='https://s3.tradingview.com/tv.js')
		script(type="text/javascript",src="//cdnjs.cloudflare.com/ajax/libs/crypto-js/4.0.0/crypto-js.min.js")
		script(type='text/javascript' src='//cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.0.0/mdb.min.js')
		script(type="text/javascript",src="/inputs.js")
		script(type="text/javascript",src="/bindings.js")
		script(type="text/javascript",src="/ws.js")
		script(type="text/javascript",src="/range.js")
		script(type="text/javascript",src="/cursor.js")
		script(type="text/javascript",src="/xaxis.js")
		script(type="text/javascript",src="/yaxis.js")
		script(type="text/javascript",src="/order.js")
		script(type="text/javascript",src="/bar.js")
		script(type="text/javascript",src="/chart.js")
		script(type="text/javascript",src="/common.js")
